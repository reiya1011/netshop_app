<div class="user-show-wrapper">
 
 <div class="image-container">
　<%= image_tag asset_path('user-show-header.jpg') %> 
 </div>
 
 <div class="user-info-wraper">
  
  <div class="user-info-container">
   
   <div class="user-info-list">
    <h2 class="serif underline">メニュー</h2>
    <div class="user-info-list-container">
     <ul>
      <li><%= link_to "アカウント情報", user_path(current_user) %></li>
      <li><%= link_to "メールアドレス設定", edit_user_path(current_user) %></li>
      <% unless @info.nil? %>
       <li><%= link_to "お届け先設定", edit_user_info_path(current_user) %></li>
      <% else %>
       <li><%= link_to "お届け先設定", new_user_info_path %></li>
      <% end %>
      <li><%= link_to "購入履歴", history_purchase_index_path %></li>
      <li><%= link_to "お気に入りリスト", likes_path %></li>
      <li><%= link_to "ショッピングバッグ", current_cart %></li>
      <li><%= link_to "ログアウト", logout_path(current_user), method: :delete %></li>
      <li><%= link_to "退会", @user, method: :delete, class: "user-logout-form" %></li>
     </ul>
    </div>
   </div> 
   
   <div class="phone-user-info-list display-none">
    <p><span>メニュー</span><i class="fa fa-angle-down phone-user-info-list-icon"></i></p>
   </div>
   
　 <div class="user-info-left">
　  
　  <div class="phone-user-info-list-wrapper display-none">
     <div class="phone-user-info-list-container">
      <ul>
       <li><%= link_to "アカウント情報", user_path(current_user) %></li>
       <li><%= link_to "メールアドレス設定", edit_user_path(current_user) %></li>
       <% unless @info.nil? %>
        <li><%= link_to "お届け先設定", edit_user_info_path(current_user) %></li>
       <% else %>
        <li><%= link_to "お届け先設定", new_user_info_path %></li>
       <% end %>
       <li><%= link_to "購入履歴", history_purchase_index_path %></li>
       <li><%= link_to "お気に入りリスト", likes_path %></li>
       <li><%= link_to "ショッピングバッグ", current_cart %></li>
       <li><%= link_to "ログアウト", logout_path(current_user), method: :delete %></li>
       <li><%= link_to "退会", current_user, method: :delete, class: "user-logout-form" %></li>
      </ul>
      <div class="phone-user-info-list-under"></div>
     </div>
    </div>
   
   
　  <div class="user-edit-form">
      <h3 class="serif user-info-title">アカウント情報</h3>
      <%= form_with(model: @user, local: true) do |f| %>
    
 　    <div class="form-group">
       <%= f.label :メールアドレス %>
       <%= f.email_field :email, class: "form-control" %>
      </div>
      
      <div class="center">
       <%= f.submit "更新する", class: "account-edit-btn center"  %>
      </div>
  
     <% end %>
    </div>
  </div>
    
  
 </div>
</div>