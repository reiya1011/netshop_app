<!-- アカウント情婦ページ -->

<div class="user-info-left">
　  
    <h2 class="serif user-info-title">メールアドレス</h2>
    
    <div class="user-info-email">
     <div class="user-edit-form">
      <%= form_with(model: @user, local: true) do |f| %>
    
 　     <div class="form-group">
 　      <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: "form-control" %>
       </div>
      
       <div class="center">
        <%= f.submit "保存", class: "account-edit-btn center"  %>
       </div>
  
      <% end %>
     </div>
    </div>
    
    <h2 class="serif user-info-title">お客様情報</h2>
    <div class="user-addressee"> 
     <% unless @info.nil? %>
      <%= render 'user_info/edit' %>
     <% else %>
      <%= render 'user_info/new' %>
     <% end %>
    </div>
  
</div>