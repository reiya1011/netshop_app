 <h3 class="serif center">お客様情報</h3>
 <%= form_with(url: shopping_path, method: :patch, local: true) do |f| %>
 
   <div><%= hidden_field_tag :id, current_cart.id %></div>
   
   <div class="form-group">
    <%= f.label :お名前 %>
    <%= f.text_field :name, value: @info.name, class: "form-control" %>
   </div>
   
   <div class="form-group">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number, value: @info.phone_number, class: "form-control" %>
   </div>
   
   <div class="form-group">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, value: @info.postal_code, class: "form-control" %>
   </div>
 
   <div class="form-group">
    <%= f.label :都道府県 %>
    <%= f.text_field :prefectures, value: @info.prefectures, class: "form-control" %>
   </div>
  
   <div class="form-group"> 
    <%= f.label :市町村区 %>
    <%= f.text_field :municipal_district, value: @info.municipal_district, class: "form-control" %>
   </div>
   
   <div class="form-group">
    <%= f.label :番地 %>
    <%= f.text_field :street_bunch, value: @info.street_bunch, class: "form-control" %>
   </div>
   
   <div class="form-group">
　  <% unless @info.building_name.nil? %>
　   <%= f.label :建物名（任意）, class: "building-name-title" %>
     <%= f.text_field :building_name, value: @info.building_name, class: "form-control" %>
    <% else %>
     <%= f.label :建物名（任意）, class: "building-name-title" %>
     <%= f.text_field :building_name, class: "form-control" %>
    <% end %>
   </div>
  
   <%= f.submit "次へ", class:"user-info-btn" %>

  <% end %>

  