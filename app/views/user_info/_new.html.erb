
 　　<%= form_with(url: user_info_index_path, local: true) do |f| %>
 
  　　 <div><%= hidden_field_tag :id, current_cart.id %></div>
     
     <div class="user-addressee-wrapper">
        <div class="form-group">
      <%= f.label :お名前 %>
      <%= f.text_field :name, class: "form-control" %>
     </div>
   
     <div class="form-group">
      <%= f.label :電話番号 %>
      <%= f.text_field :phone_number, class: "form-control" %>
