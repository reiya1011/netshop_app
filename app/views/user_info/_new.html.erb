     <div class="form-group">
      <%= f.label :都道府県 %>
      <%= f.text_field :prefectures, class: "form-control" %>
     </div>
  
     <div class="form-group"> 
      <%= f.label :市町村区 %>
      <%= f.text_field :municipal_district, class: "form-control" %>
     </div>
   
