<div class="admin-wrapper">
 
 <%= render 'admin/list' %>
 
 <div class="admin-right">
  <div class="list-wrapper">
   <h3 class="center">登録情報</h3>
    <table class="table">
     <tr>
      <th scope="col">ID</th>
      <th scope="row"><%= @user_info.id %></th>
     </tr>
     <tr>
      <th scope="col">名前</th>
      <td><%= @user_info.name %></td>
     </tr>
     <tr>
      <th scope="col">電話番号</th>
      <td><%= @user_info.phone_number %></td>
     </tr>       
     <tr>
      <th scope="col">郵便番号</th>
      <td><%= @user_info.postal_code %></td>
     </tr>
     <tr>
      <th scope="col">住所</th>
      <td>
       <%= @user_info.prefectures %>
       <%= @user_info.municipal_district %>
       <%= @user_info.street_bunch %>
       <% unless @user_info.building_name.empty? %>
       　<%= @user_info.building_name %>
       <% end %>
      </td>
     </tr>
    </table>
    
  </div>
 </div>
</div>