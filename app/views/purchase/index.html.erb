<div class="admin-wrapper">

 <%= render 'admin/list' %>
 
 <div class="admin-right">
  <div class="list-wrapper">
   <h3 class="center">販売管理</h3>
   
   <table class="table">
    <thead>
     <tr>
      <th scope="col">ID</th>
      <th scope="col">お客様</th>
      <th scope="col">商品名</th>
      <th scope="col">購入数</th>
      <th scope="col">購入日</th>
     </tr>
    </thead> 
    
    <tbody>
     <% @infos.each do |info| %>
      <tr>
       <th scope="row"><%= info.id %></td>
       <td><%= link_to info.u_info.name,  purchase_path(info.u_info.id) %></td>
       <td><%= link_to info.item.name, item_path(info.item) %></td>
       <td><%= info.quantity %></td>
       <td><%= info.created_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
   <%= paginate @infos %>
  </div>
 </div>
</div>