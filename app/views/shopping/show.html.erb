<div class="pc-shopping-info-wrapper">
 
 
 
  <div class="user-info-wrapper">
   <%= link_to current_cart do %>
    <%= image_tag asset_path('item_show_back_image.png'), class: 'cart-back-image' %>
   <% end %>
   <% unless @info.nil? %>
    <%= render 'user_info/user-info-edit' %>
   <% else %>
    <%= render 'user_info/user-info-new' %>
   <% end %>
  </div>


  <div class="shopping-item-wrapper">
  <h3 class="center">ショッピングバッグ(<%= @cart_counts %>)</h3>
  <% @items.each do |item| %>
   <div class="shopping-item-info">
    <%= image_tag(item.image) %>
　  <% @cart_item = CartItem.find_by(cart_id: current_cart.id, item_id: item.id) %>
　  <ul>
　   <li><%= item.name %></li>
     <li><%= "数量:#{@cart_item.cart_quantity[0].quantity.count}" %></li>
     <li><%= "¥#{item.price * @cart_item.cart_quantity[0].quantity.count}" %></li>
　  </ul>
　 </div>
  <% end %>

  <div class="shopping-price-info">

   <div class="total-price-wrapper">
    <span class="total-price">合計</span>
    <%= "¥#{@price}(税込み)" %>
   </div>

  </div>
 </div>


</div>



